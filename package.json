{
  "name": "avatarimaging-crm",
  "version": "1.0.0",
  "description": "Avatar Imaging CRM - Medical Appointment Management System",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:worker\"",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler deploy --env=production",
    "deploy:dev": "npm run build && wrangler deploy --env=development",
    "db:init": "wrangler d1 execute avatarimaging-crm-db-dev --file=migrations/001_initial_schema.sql",
    "db:init:prod": "wrangler d1 execute avatarimaging-crm-db-prod --file=migrations/001_initial_schema.sql --remote",
    "db:shell": "wrangler d1 execute avatarimaging-crm-db-dev --command=\"SELECT name FROM sqlite_master WHERE type='table'\"",
    "db:shell:prod": "wrangler d1 execute avatarimaging-crm-db-prod --remote --command=\"SELECT name FROM sqlite_master WHERE type='table'\"",
    "db:backup": "wrangler d1 export avatarimaging-crm-db-prod --remote --output=backups/backup-$(date +%Y%m%d-%H%M%S).sql",
    "secret:setup": "node scripts/setup-secrets.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env=production"
  },
  "dependencies": {
    "hono": "^4.6.15",
    "@hono/zod-validator": "^0.4.1",
    "zod": "^3.24.1",
    "ulid": "^2.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "@tanstack/react-query": "^5.62.8",
    "date-fns": "^4.1.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
